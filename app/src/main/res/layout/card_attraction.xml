<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_attraction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_attraction_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_map"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:textColor="@color/icons"
            android:textSize="18sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/text_attraction_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_map"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_attraction_address"
            android:isIndicator="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize=".5" />


        <Button
            android:id="@+id/button_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:text="Learn More"
            android:textColor="@color/primary" />
    </RelativeLayout>

</android.support.v7.widget.CardView>